# Reload sxhkd config
super + alt + 1
	pkill -USR1 -x sxhkd
# Restart polybar
super + shift + p
	launch-polybar

# Basics
super + Return
	$TERMINAL
super + d
	rofi -show run

# General
super + grave
	rofiunicode
super + n
	$TERMINAL -e newsboat
super + c
	galculator
super + g
	gimp
super + i
	$TERMINAL -e htop
super + 9
	blurlock

# Functions
super + F2
	$BROWSER
super + F3
	$TERMINAL -e ranger

# Screenshots
@Print
	imgur-screenshot

# Media
XF86AudioLowerVolume
	amixer sset Master unmute && amixer set Master 2%-
XF86AudioRaiseVolume
	amixer sset Master unmute && amixer set Master 2%+
XF86AudioMute
	amixer -q sset Master,0 toggle
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
