# Reload sxhkd config
super + alt + 1
	pkill -USR1 -x sxhkd

# General
super + grave
	dmenuunicode
# Now from ~/.i3/config:
super + 9
	blurlock

# cheaphax ranger
super + alt + r
	$TERMINAL -e "bash -ic ranger"

# Media
XF86AudioLowerVolume
	amixer set Master 1%-
XF86AudioRaiseVolume
	amixer set Master 1%+
XF86AudioMute
	amixer -q sset Master,0 toggle
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
