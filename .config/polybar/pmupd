#!/bin/bash

ping -q -c 1 8.8.8.8 > /dev/null || exit

/usr/bin/notify-send "ğŸ“¦ Checking for updates..."

aur_updates=$(yay -Pn)
pacman_updates=$(pacman -Qu | wc -l)

total_updates=$(($aur_updates+$pacman_updates))

if [ $total_updates -eq "1" ]; then
	echo $total_updates update
	/usr/bin/notify-send "ğŸ“¦ You've got $total_updates update!"
else
	echo $total_updates updates
	/usr/bin/notify-send "ğŸ“¦ You've got $total_updates updates!"
fi
