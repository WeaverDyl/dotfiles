#!/bin/bash

# Intended to be run as a cronjob

BATPATH=/sys/class/power_supply/BAT0
BAT_FULL=$BATPATH/charge_full
BAT_NOW=$BATPATH/charge_now
bf=$(cat $BAT_FULL)
bn=$(cat $BAT_NOW)
if [ $(( 100 * $bn / $bf )) -lt 50 ]
then
    notify-send -u critical "Battery Alert" "Battery Level Low -- Charge Battery Soon"
fi
