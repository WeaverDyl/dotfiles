# Reload sxhkd config
super + alt + 1
	pkill -USR1 -x sxhkd

# Basics
super + Return
	$TERMINAL
super + d
	rofi -show run

# General
super + grave
	dmenuunicode
super + g
	galculator
super + 9
	blurlock

# Functions
super + F2
	$BROWSER
super + F3
	$TERMINAL -e "bash -ic ranger"


# Recording / Screenshots
@Print
	imgur-screenshot
#@super + Print
#	ffrec

# Media
XF86AudioLowerVolume
	amixer set Master 1%-
XF86AudioRaiseVolume
	amixer set Master 1%+
XF86AudioMute
	amixer -q sset Master,0 toggle
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
