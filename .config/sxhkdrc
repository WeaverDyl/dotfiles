# Reload sxhkd config
super + alt + 1
	pkill -USR1 -x sxhkd

# General
super + grave
	dmenuunicode
# Now from ~/.i3/config:
super + 9
	blurlock
super + alt + r
	$TERMINAL -e "bash -ic ranger"
super + Return
	$TERMINAL
super + d
	dmenu_recency

# Scratchpad
# make better binds, use for spotify, steam, discord, etc...
# Spotify
super + c
	i3 "[con_mark=\"spotify\"] scratchpad show"

# Cycle scratchpads
super + minus
	i3 "scratchpad show"

# Move focus to scratchpad (add class?)
super + shift + minus
	i3 "move scratchpad"

# Media
XF86AudioLowerVolume
	amixer set Master 1%-
XF86AudioRaiseVolume
	amixer set Master 1%+
XF86AudioMute
	amixer -q sset Master,0 toggle
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous

# i3
# Reload i3 config
super + shift + c
	i3 "reload"

# Restart i3 inplace
super + shift + r
	i3 "restart"

# exit i3..


# Switch workstations {1-8}...
