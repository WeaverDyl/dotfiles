#!/bin/bash

ping -q -c 1 8.8.8.8 > /dev/null || exit

/usr/bin/notify-send "ðŸ“¦ Checking for updates..."

let aur_updates=$(yay -Pn | grep -Eo "[0-9]+")
let pacman_updates=$(pacman -Qu | wc -l)

let total_updates=$((aur_updates+pacman_updates_))
echo $total_updates

if [ $total_updates -eq "1" ]; then
	/usr/bin/notify-send "ðŸ“¦ You've got $total_updates update!"
else
	/usr/bin/notify-send "ðŸ“¦ You've got $total_updates updates!"
fi
