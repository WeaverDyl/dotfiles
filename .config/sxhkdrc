# Reload sxhkd config
super + alt + 1
	pkill -USR1 -x sxhkd

# General
super + grave
	dmenuunicode
super + 9
	blurlock
super + alt + r
	$TERMINAL -e "bash -ic ranger"
super + Return
	$TERMINAL
super + d
	rofi -show run -theme Arc-Dark
super + F2
	firefox

# Media
XF86AudioLowerVolume
	amixer set Master 1%-
XF86AudioRaiseVolume
	amixer set Master 1%+
XF86AudioMute
	amixer -q sset Master,0 toggle
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
